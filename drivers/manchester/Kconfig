#
# MANCHESTER options
#
menuconfig MANCHESTER
	bool "Serial bus driver using Manchester encoding"
	help
	  Enable Manchester encoded serial bus driver

if MANCHESTER

# Include these first so that any properties (e.g. defaults) below can be
# overridden (by defining symbols in multiple locations)
source "drivers/manchester/Kconfig.gpio"

config MANCHESTER_INIT_PRIORITY
	int "Init priority"
	default KERNEL_INIT_PRIORITY_DEVICE
	help
	  Manchester device driver initialization priority.

module = MANCHESTER
module-str = manchester
source "subsys/logging/Kconfig.template.log_config"

config MANCHESTER_BITBANG
	bool
	help
	  Enable library used for software driven (bit banging)
		Manchester serial support

endif # MANCHESTER
